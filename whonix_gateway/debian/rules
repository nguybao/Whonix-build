#!/usr/bin/make -f

# export DH_VERBOSE=1



build-arch: build
build-indep: build

build: build-stamp
build-stamp:
	dh_testdir
	# build package here
	#$(MAKE) LOCAL_LDFLAGS=-g
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	[ ! -f Makefile ] || $(MAKE) -i clean
	
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs usr/local/bin usr/local/share

	cp -rp usr debian/whonix-gateway/.
	cp -rp ../whonix_shared/etc debian/whonix-gateway/.
	cp -rp ../whonix_shared/usr debian/whonix-gateway/.
	cp -rp ../whonix_shared/var debian/whonix-gateway/.
	#Following is directory manipulation of makefile -- DO NOT EDIT
	$(MAKE) -f Makefile.build install 

binary-indep:	build install
binary-arch:	build install
	dh_testdir
	dh_testroot
	#dh_installdocs		CONTRIBUTORS
	#dh_installman		fdupes.1
	#dh_installchangelogs	CHANGES
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary:	binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
